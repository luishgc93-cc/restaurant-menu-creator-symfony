{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block body %}

<section class="flex flex-col md:flex-row h-screen items-center">


  <div class="bg-indigo-600 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
    <img src="/themes/1/images/bg_3.jpg" alt="" class="w-full h-full object-cover">
  </div>

  <div class="bg-white w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12
        flex items-center justify-center">

    <div class="w-full h-100">

      {% include '/Includes/flashAlertLoginAndRegister.html.twig' %}

      <h1 class="text-xl md:text-2xl font-bold leading-tight mt-12">Iniciar sesión</h1>


      <form class="mt-6" {{ path('app_login') }} method="post">

        <div>
          <label class="block text-gray-700">Email</label>
          <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Enter Email Address" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" autofocus autocomplete required>
        </div>

        <div class="mt-4">
          <label class="block text-gray-700">Contraseña</label>
          <input type="password" id="password" name="_password" placeholder="Introduzca la contraseña" minlength="6" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
                focus:bg-white focus:outline-none" required>
        </div>

        <div class="text-right mt-2">
            <label class="text-sm font-semibold text-gray-700 hover:text-blue-700 focus:text-blue-700" for="legal"> <a class="text-blue-500 hover:text-blue-700 font-semibold" href="{{ path('recoveryAccountUser') }}">Recuperar contraseña</a></label>
        </div>

        <input type="hidden" name="token" value="{{ csrf_token('validateTokenSym') }}" />

        <button type="submit" class="w-full block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg
              px-4 py-3 mt-6">Inciar sesión</button>
      </form>

      <hr class="my-6 border-gray-300 w-full">

      <p class="mt-8">¿No tienes una cuenta creada?<a href="{{ path('app_register') }}" class="text-blue-500 hover:text-blue-700 font-semibold"> Registrate totalmente gratis</a></p>


    </div>
  </div>

</section>


{% endblock %}

{% block footer %}
{% endblock %}
