{{dump(content.menus)}}
<script type="application/ld+json">
{
   "@context":"http://schema.org",
   "@type":"Restaurant",
   "url":"http://www.thisisarestaurant.com",
   "name":"{{content.local.nombreLocal}}",
   "image":"http://www.example.com/image-of-some-restaurant.jpg",
   "telephone":"{{content.local.informacion.telefono}}",
   "priceRange" : "$100 - $200",
   "description" : "{{content.local.descripcionLocal}}",
   "address" : {
    "@type" : "PostalAddress",
    "streetAddress" : "STREET ADDRESS",
    "addressLocality" : "CITY",
    "addressRegion" : "STATE ABBREVIATION",
    "postalCode" : "ZIP CODE"
  },
   "servesCuisine":[
      "{{content.local.descripcionLocal}}"
   ],
   "hasMenu":{
      "@type":"Menu",
      "name":"{{content.local.nombreLocal}} Menu",
      "description":"{{content.local.informacion.descripcion}}",
      "hasMenuSection":[
         {
            "@type":"MenuSection",
            "name":"Dinner",
            "description":"Dinner dishes",
            "hasMenuSection":[
               {% for menu in content.menus %}
               {
                  "@type":"MenuSection",
                  "name":"{{ menu.nombreMenu }}",
                  "description":"{{ menu.informacionMenu }}",
                  {% for producto in menu.productos %}
                  "hasMenuItem":{
                     "@type":"MenuItem",
                     "name":"{{ producto.nombreProducto }}",
                     "description":"{{ producto.informacionProducto }}",
                     "offers":{
                        "@type":"Offer",
                        "price":"{{ producto.precioProducto }}",
                        "priceCurrency":"EUR"
                     }
                  }
                  {% if not loop.last %},{% endif %}
                  {% endfor %}
               }
               {% if not loop.last %},{% endif %}
               {% endfor %}
            ]
         }
      ]
   }
}
</script>