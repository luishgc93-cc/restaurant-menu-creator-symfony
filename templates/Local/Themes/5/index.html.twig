<!DOCTYPE html>
<html lang="en"><!-- Basic -->
<head>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">   
   
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
 
     <!-- Site Metas -->
    <title>{{ content.local.descripcionLocal }} | {{ content.local.nombreLocal }}</title>  
    <meta name="keywords" content="">
    <meta name="description" content="{{ content.informationForLocal.descripcion }}">
    <meta name="author" content="">

    <!-- Site Icons -->
    <link rel="shortcut icon" href="themes/5/images/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="themes/5/images/apple-touch-icon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="themes/5/css/bootstrap.min.css">    
	<!-- Site CSS -->
    <link rel="stylesheet" href="themes/5/css/style.css">    
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="themes/5/css/responsive.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="themes/5/css/custom.css">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
{% set photosTheme = content.informationForLocal.photos %}

{% set photo1 = 'themes/1/images/bg_6.jpg' %}
{% set photo2 = 'themes/1/images/bg_4.jpg' %}
{% set photo3 = 'themes/1/images/breakfast-1.jpg' %}
{% set photo4 = 'themes/1/images/breakfast-1.jpg' %}
{% set photo5 = 'themes/2/images/reservations.jpg' %}

{% for photo in photosTheme %}
	{% if photo.orden == 1 %}
		{% set photo1 = photo.photoPath %}
	{% elseif photo.orden == 2 %}
		{% set photo2 = photo.photoPath %}
	{% elseif photo.orden == 3 %}
		{% set photo3 = photo.photoPath %}
	{% elseif photo.orden == 4 %}
		{% set photo4 = photo.photoPath %}		
	{% elseif photo.orden == 5 %}
		{% set photo5 = photo.photoPath %}		
	{% endif %}
{% endfor %}
{% if content.local.colorWeb|default %}
{% set color =  content.local.colorWeb %}
<style>
.footer-area h3 {
border-bottom: 1px dashed {{ color }};
}

.copyright {
border-top: 1px dashed {{ color }};
}

.top-navbar .navbar-light .navbar-nav .nav-item.active .nav-link {
    background: {{ color }};
    color: #ffffff;
    border-radius: 4px;
}

.top-navbar .navbar-light .navbar-nav .nav-item .nav-link:hover{
    background: {{ color }};
	color: #ffffff;
}
</style>

{% endif %}
<body>
	{% include '/Local/Themes/Components/flashAlertThemes.html.twig' %}

	<!-- Start header -->
	<header class="top-navbar">
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container">
				<a class="navbar-brand" href="index.html">
				{% if content.local.logo|default %}
					<img src="{{ content.local.logo }}" alt="{{ content.local.nombreLocal }}" with="50px" height="50px"/>
				{% else %}
          			{{ content.local.nombreLocal }}
				{% endif %}
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbars-rs-food" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
				  <span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbars-rs-food">
					<ul class="navbar-nav ml-auto">
						<li class="nav-item active"><a class="nav-link" href="#inicio">Inicio</a></li>
						<li class="nav-item"><a class="nav-link" href="#menu">Menu</a></li>
						<li class="nav-item"><a class="nav-link" href="#productos">Productos</a></li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<!-- End header -->
	
	<!-- Start slides -->
	<div id="slides" class="cover-slides">
		<ul class="slides-container" id="inicio">
			<li class="text-center">
				<img id="image-1" src="{{ photo1|default('themes/5/images/slider-01.jpg') }}" alt="">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<h1 class="m-b-20">{{ content.local.nombreLocal }}</h1>
							<p class="m-b-40">{{ content.local.descripcionLocal }}</p>
						</div>
					</div>
				</div>
			</li>
		</ul>
	</div>
{% if content.userIsAdmin|default(false) %}
	{% include '/Local/Themes/Components/buttonChangePhoto.html.twig'  with {'idPhoto': 1 }%}
{% endif %}
	<!-- End slides -->
	
	<!-- Start About -->
	<div class="about-section-box">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 col-md-6 col-sm-12">
					<img id="image-2" src={{ photo2|default('themes/5/images/about-img.jpg') }}  alt="" class="img-fluid"  style="box-shadow: -10px -10px 0px {{ content.local.colorWeb|default('#d65106') }}">
					  {% if content.userIsAdmin|default(false) %}
						{% include '/Local/Themes/Components/buttonChangePhoto.html.twig'  with {'idPhoto': 2 }%}
					{% endif %}
				</div>
				<div class="col-lg-6 col-md-6 col-sm-12 text-center">
					<div class="inner-column">
						<h4>Sobre Nosotros</h4>
						<p>{{ content.informationForLocal.descripcion  }} </p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- End About -->
	
	<!-- Start QT -->
	<div id="image-3" class="qt-box qt-background" style="background: url( {{ photo3|default('themes/5/images/qt-bg.jpg') }} ); 	background-size: cover; padding: 100px 0; background-attachment: fixed; background-position: center center; position: relative;">
		<div class="container">
			<div class="row">
				<div class="col-md-8 ml-auto mr-auto text-left">
					<p class="lead ">
						{{ content.local.descripcionLocal }}
					</p>
				</div>
			</div>
		</div>
	</div>
{% if content.userIsAdmin|default(false) %}
	{% include '/Local/Themes/Components/buttonChangePhoto.html.twig'  with {'idPhoto': 3 }%}
{% endif %}
	<!-- End QT -->
	
	<!-- Start Menu -->
	<div class="menu-box" id="menu">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="heading-title text-center">
						<h2>Menu</h2>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="special-menu text-center">
						<div class="button-group filter-button-group">
							{% for menu in content.menus %}
									<button data-filter=".{{  menu.nombreMenu|replace({' ': ''}) }}">{{  menu.nombreMenu }}</button>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
				
			<div class="row special-list" id="productos">

				{% for menu in content.menus %}

					{% set nombreMenu = menu.nombreMenu|replace({' ': ''}) %}

                    {% for producto in  menu.productos %}
						<div class="col-lg-4 col-md-6 special-grid {{  nombreMenu }}">
							<div class="gallery-single fix">
							<img src="themes/5/images/img-01.jpg" class="img-fluid" alt="Image">
								<div class="why-text">
									<h4>{{ producto.nombreProducto }}</h4>
									<p>{{ producto.informacionProducto }}</p>
									<h5>{{ producto.precioProducto }}€</h5>
								</div> 				
							</div>
						</div>		
					{% endfor %}

				{% endfor %}

			</div>
		</div>
	</div>
	<!-- End Menu -->
	
	<!-- Start Gallery -->
	<div class="gallery-box">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="heading-title text-center">
						<h2>Nuestros Productos</h2>
					</div>
				</div>
			</div>
			<div class="tz-gallery">
				<div class="row">
					{% for producto in content.productsAlone|slice(0, 5) %}
					<div class="col-sm-12 col-md-4 col-lg-4">
						<a class="lightbox">
							<img class="img-fluid" src="{{ producto.photos.0.photoPath|default }}" alt="{{  producto.nombreProducto }}">
						</a>
					</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
	<!-- End Gallery -->
	
	<!-- Start Footer -->
	<footer class="footer-area bg-f" id="contactar">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 col-md-6">
					<h3>Sobre nosotros</h3>
					<p class="lead"> {{ content.informationForLocal.descripcion  }} </p>
				</div>
				<div class="col-lg-3 col-md-6">
					<h3>Opening hours</h3>
					<p><span class="text-color">Monday: </span>Closed</p>
					<p><span class="text-color">Tue-Wed :</span> 9:Am - 10PM</p>
					<p><span class="text-color">Thu-Fri :</span> 9:Am - 10PM</p>
					<p><span class="text-color">Sat-Sun :</span> 5:PM - 10PM</p>
				</div>
				<div class="col-lg-3 col-md-6">
					<h3>Contacto</h3>
					<p class="lead">Dirección: {{ content.informationForLocal.calle }} {{ content.informationForLocal.localidad }} {{ content.informationForLocal.ciudad }}</p>
					<p class="lead">Teléfono: {{ content.informationForLocal.telefono }} </p>
				</div>
			</div>
		</div>
		
		<div class="copyright">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<p class="company-name">All Rights Reserved. &copy; 2018 <a href="#">Yamifood Restaurant</a> Design By : 
					<a href="https://html.design/">html design</a></p>
					</div>
				</div>
			</div>
		</div>
		
	</footer>
	<!-- End Footer -->
	
	<a href="#" id="back-to-top" title="Back to top" style="display: none;">&uarr;</a>

	<!-- ALL JS FILES -->
	<script src="themes/5/js/jquery-3.2.1.min.js"></script>
	<script src="themes/5/js/popper.min.js"></script>
	<script src="themes/5/js/bootstrap.min.js"></script>
    <!-- ALL PLUGINS -->
	<script src="themes/5/js/jquery.superslides.min.js"></script>
	<script src="themes/5/js/images-loded.min.js"></script>
	<script src="themes/5/js/isotope.min.js"></script>
	<script src="themes/5/js/baguetteBox.min.js"></script>
	<script src="themes/5/js/form-validator.min.js"></script>
    <script src="themes/5/js/contact-form-script.js"></script>
    <script src="themes/5/js/custom.js"></script>
{% if app.request.query.get('edit-photos')%}
  {% include '/Local/Themes/Components/buttonChangePhotoOfJs.html.twig' %}
{% endif %}
</body>
</html>