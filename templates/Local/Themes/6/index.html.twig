{% set photosTheme = content.informationForLocal.photos %}

{% set photo1 = 'themes/1/images/bg_6.jpg' %}
{% set photo2 = 'themes/1/images/bg_4.jpg' %}
{% set photo3 = 'themes/1/images/breakfast-1.jpg' %}
{% set photo4 = 'themes/1/images/breakfast-1.jpg' %}
{% set photo5 = 'themes/2/images/reservations.jpg' %}

{% for photo in photosTheme %}
	{% if photo.orden == 1 %}
		{% set photo1 = photo.photoPath %}
	{% elseif photo.orden == 2 %}
		{% set photo2 = photo.photoPath %}
	{% elseif photo.orden == 3 %}
		{% set photo3 = photo.photoPath %}
	{% elseif photo.orden == 4 %}
		{% set photo4 = photo.photoPath %}		
	{% elseif photo.orden == 5 %}
		{% set photo5 = photo.photoPath %}		
	{% endif %}
{% endfor %}

{% if content.local.colorWeb|default %}

<style>

.fh5co-main-nav .fh5co-menu-1 a.active, .fh5co-main-nav .fh5co-menu-2 a.active, .fh5co-main-nav .fh5co-logo a.active{
	color: {{ content.local.colorWeb|default }};
}
#fh5co-about .fh5co-text .heading:after {
    content: "";
    position: absolute;
    bottom: 0;
    width: 40px;
    height: 2px;
    left: 50%;
    background: {{ content.local.colorWeb|default }};
    margin-left: -20px;
}

.fh5co-heading .heading:after {
    content: "";
    position: absolute;
    bottom: 0;
    width: 40px;
    height: 2px;
    left: 50%;
    background: {{ content.local.colorWeb|default }};
    margin-left: -20px;
}

#fh5co-menus .fh5co-food-menu ul li .fh5co-food-pricing {
    float: right;
    width: 20%;
    text-align: right;
    font-size: 20px;
    color: {{ content.local.colorWeb|default }};
}
a {
    color:{{ content.local.colorWeb|default }};
}

.btn-primary {
    background: {{ content.local.colorWeb|default }};
    color: #fff;
    border:{{ content.local.colorWeb|default }};
}

.btn-primary:hover, .btn-primary:focus, .btn-primary:active {
  background: {{ content.local.colorWeb|default }} !important;
  border-color: {{ content.local.colorWeb|default }} !important;
}
</style>

{% endif %}

	<body>
	{% include '/Local/Themes/Components/flashAlertThemes.html.twig' %}

	<div id="fh5co-container">
		<div id="fh5co-home" class="js-fullheight" data-section="home">

			<div class="flexslider">
				
				<div class="fh5co-overlay"></div>
				<div class="fh5co-text">
					<div class="container">
						<div class="row">
							<h1 class="to-animate">{{ content.local.nombreLocal }}</h1>
							<h2 class="to-animate">En <span>{{ content.informationForLocal.localidad }}</span> en la calle {{ content.informationForLocal.calle }}</h2>
						</div>
					</div>
				</div>
			  	<ul class="slides">
			   	<li id="image-1" style="background-image: url({{ photo1|default('themes/6/images/slide_1.jpg') }});" data-stellar-background-ratio="0.5"></li>
			  	</ul>

			</div>
			
		</div>
			{% if content.userIsAdmin|default(false) %}
				{% include '/Local/Themes/Components/buttonChangePhoto.html.twig'  with {'idPhoto': 1 }%}
			{% endif %}

		<div class="js-sticky">
			<div class="fh5co-main-nav">
				<div class="container-fluid">
					<div class="fh5co-menu-1">
						<a href="#" data-nav-section="home">Inicio</a>
					</div>
					<div class="fh5co-logo">
						<a href="index.html">{{ content.local.nombreLocal }}</a>
					</div>
					<div class="fh5co-menu-2">
						<a href="#" data-nav-section="menu">Menu</a>
						<a href="#" data-nav-section="reservation">Contactar</a>
					</div>
				</div>
				
			</div>
		</div>

		<div id="fh5co-about" data-section="about">
			<div id="image-2" class="fh5co-2col fh5co-bg to-animate-2" style="background-image: url({{ photo2|default('themes/6/images/res_img_1.jpg') }})"></div>
			<div class="fh5co-2col fh5co-text">
				<h2 class="heading to-animate">Sobre Nosotros</h2>
				<p class="to-animate"><span class="firstcharacter">{{ content.informationForLocal.descripcion }}</p>
			</div>
		</div>
			{% if content.userIsAdmin|default(false) %}
				{% include '/Local/Themes/Components/buttonChangePhoto.html.twig'  with {'idPhoto': 2 }%}
			{% endif %}
		<div id="fh5co-menus" data-section="menu">
			<div class="container">
				<div class="row text-center fh5co-heading row-padded">
					<div class="col-md-8 col-md-offset-2">
						<h2 class="heading to-animate">Menú</h2>
					</div>
				</div>
				<div class="row row-padded">
				{% for menu in content.menus %}
					<div class="col-md-6">
						<div class="fh5co-food-menu to-animate-2">

							<h2 class="fh5co-drinks">{{  menu.nombreMenu }}</h2>
							<ul>
								{% for producto in  menu.productos %}
								<li>
									<div class="fh5co-food-desc">
										<figure>
											{% if producto.photos.0.photoPath|default(null) %}<img src="{{  producto.photos.0.photoPath|default('themes/6/images/res_img_5.jpg')  }}" class="img-responsive" alt="Free HTML5 Templates by FREEHTML5.co"> {% endif %}
										</figure>
										<div>
											<h3>{{ producto.nombreProducto }}</h3>
											<p>{{ producto.informacionProducto }}</p>
										</div>
									</div>
									<div class="fh5co-food-pricing">
										{{ producto.precioProducto }}€
									</div>
								</li>
								{% endfor %}
							</ul>
						</div>
					</div>
				{% endfor %}
				</div>
			</div>
		</div>

		<div id="fh5co-contact" data-section="reservation">
			<div class="container">
				<div class="row text-center fh5co-heading row-padded">
					<div class="col-md-8 col-md-offset-2">
						<h2 class="heading to-animate">Contactar con {{ content.local.nombreLocal }}</h2>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 to-animate-2">
						<h3>Información de Contacto</h3>
						<ul class="fh5co-contact-info">
							<li class="fh5co-contact-address ">
								<i class="icon-home"></i>
								{{ content.informationForLocal.calle }} {{ content.informationForLocal.localidad }} {{ content.informationForLocal.ciudad }}
							</li>
							<li><i class="icon-phone"></i>{{ content.informationForLocal.telefono }}</li>
							<li><i class="icon-envelope"></i>{{ content.informationForLocal.email }}</li>
						</ul>
					</div>
					<div class="col-md-6 to-animate-2">
						<h3>Formulario</h3>
						<div class="form-group ">
							<label for="name" class="sr-only">Nombre</label>
							<input id="name" class="form-control" placeholder="Nombre" type="text">
						</div>
						<div class="form-group ">
							<label for="email" class="sr-only">Email</label>
							<input id="email" class="form-control" placeholder="Email" type="email">
						</div>
						
						<div class="form-group ">
							<label for="message" class="sr-only">Mensaje</label>
							<textarea name="" id="message" cols="30" rows="5" class="form-control" placeholder="Mensaje"></textarea>
						</div>
						<div class="form-group ">
							<input class="btn btn-primary" value="Contactar" type="submit">
						</div>
						</div>
				</div>
			</div>
		</div>

		
	</div>

	<div id="fh5co-footer">
		<div class="container">
			<div class="row row-padded">
				<div class="col-md-12 text-center">
					<p class="to-animate">&copy; <script>document.write(new Date().getFullYear());</script>
					</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 text-center">
					<ul class="fh5co-social">
						<li class="to-animate-2"><a href="#"><i class="icon-facebook"></i></a></li>
						<li class="to-animate-2"><a href="#"><i class="icon-twitter"></i></a></li>
						<li class="to-animate-2"><a href="#"><i class="icon-instagram"></i></a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>


	
	
	
	
