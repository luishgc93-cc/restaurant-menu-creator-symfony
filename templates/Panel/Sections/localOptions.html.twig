{% extends 'base.html.twig' %}

{% block title %}Edita la configuraci贸n de tu Local{% endblock %}

{% block body %}

<section class="relative isolate overflow-hidden bg-white px-6 lg:px-8 mb-12">
  <div class="absolute inset-0 -z-10 bg-[radial-gradient(45rem_50rem_at_top,theme(colors.indigo.100),white)] opacity-20"></div>
  <div class="absolute inset-y-0 right-1/2 -z-10 mr-16 w-[200%] origin-bottom-left skew-x-[-30deg] bg-white shadow-xl shadow-indigo-600/10 ring-1 ring-indigo-50 sm:mr-28 lg:mr-0 xl:mr-16 xl:origin-center"></div>
  <div class="mx-auto max-w-2xl lg:max-w-4xl">

{% include '/Panel/Sections/Components/flashAlert.html.twig' %}

{% if datos %}
  {% include '/Panel/Sections/Components/navigationCreator.html.twig' %}
{% endif %}

<form  action="{{ path('panel-modify-config-local',{'id': id }) }}" method="post" enctype="multipart/form-data">
  <div class="space-y-22">
    <div class="border-b border-gray-900/10 mt-12">
      <h2 class="text-base font-semibold leading-7 text-gray-900">Edita la Configuraci贸n de tu Local</h2>
    </div>
  </div>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">

        <div class="col-span-full">
          <label for="about" class="block text-sm font-medium leading-6 text-gray-900">Nombre Local</label>
          <div class="mt-2">
            <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
              <input type="text" value="{{ datos.nombreLocal ?? '' }}" name="nombreLocal" id="nombreLocal" autocomplete="nombreLocal" class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6">
            </div>
          </div>
        </div>

        <div class="sm:col-span-4">
          <label for="calle" class="block text-sm font-medium leading-6 text-gray-900">Descripci贸n corta</label>
          <div class="mt-2">
            <textarea id="descripcion" name="descripcion" rows="3" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">{{ datos.descripcionLocal ?? '' }}</textarea>
          </div>
        </div>

        <div class="sm:col-span-4">
        <div class="sm:col-span-4">
          <label for="url" class="block text-sm font-medium leading-6 text-gray-900">Url Local (sin caracteres especiales)</label>
          <div class="mt-2">
            <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
              <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm">www.workcation.com/</span>
              <input type="text" value="{{ datos.url ?? '' }}" name="url" id="url" autocomplete="url" class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" onkeyup="sanitizeURL(this)">
            </div>
          </div>
        </div>
        </div>

        <div class="sm:col-span-4">
          <label for="calle" class="block text-sm font-medium leading-6 text-gray-900">Bloquear Web</label>
          <div class="mt-2">
              <input type="checkbox" value="" name="bloquearWeb" id="bloquearWeb"class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6">
          </div>
        </div>

        <div class="sm:col-span-4">
          <label for="calle" class="block text-sm font-medium leading-6 text-gray-900">Ocultar Formulario de Contacto</label>
          <div class="mt-2">
              <input type="checkbox" value="" name="ocultarFormulario" id="ocultarFormulario" class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6">
          </div>
        </div>

    </div>

  </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">{{ datos|default ? 'Editar' : 'Guardar ' }} Configuraci贸n del Local</button>
  </div>
</form>
  </div>
</section>


{% endblock %}